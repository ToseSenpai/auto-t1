{
  "name": "auto-t1",
  "version": "1.2.3",
  "description": "Automazione web con TypeScript, Playwright e Excel - App Electron",
  "main": "dist-electron/main.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/ToseSenpai/auto-t1.git"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build && electron-builder",
    "preview": "vite preview",
    "electron:dev": "vite",
    "electron:build": "vite build && electron-builder",
    "electron:start": "electron .",
    "compile": "tsc",
    "watch": "tsc --watch",
    "clean": "rimraf dist dist-electron out",
    "lint": "eslint src --ext .ts,.tsx",
    "format": "prettier --write \"src/**/*.{ts,tsx}\"",
    "package:publish": "electron-builder --publish always"
  },
  "keywords": [
    "automation",
    "playwright",
    "excel",
    "typescript",
    "electron",
    "react"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@playwright/test": "^1.41.0",
    "electron-log": "^5.4.3",
    "electron-updater": "^6.6.2",
    "exceljs": "^4.4.0",
    "playwright": "^1.41.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "zustand": "^4.5.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@types/react": "^18.2.48",
    "@types/react-dom": "^18.2.18",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.17",
    "concurrently": "^8.2.2",
    "electron": "^28.2.0",
    "electron-builder": "^24.9.1",
    "eslint": "^8.56.0",
    "postcss": "^8.4.33",
    "prettier": "^3.2.4",
    "rimraf": "^5.0.5",
    "sharp": "^0.34.5",
    "tailwindcss": "^3.4.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.12",
    "vite-plugin-electron": "^0.28.2",
    "wait-on": "^7.2.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "build": {
    "appId": "com.auto-t1.app",
    "productName": "Auto-T1",
    "directories": {
      "output": "out"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "resources/**/*"
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "resources/icon.ico"
    },
    "mac": {
      "target": [
        "dmg"
      ]
    },
    "linux": {
      "target": [
        "AppImage"
      ]
    },
    "publish": {
      "provider": "github",
      "owner": "ToseSenpai",
      "repo": "auto-t1"
    }
  }
}
